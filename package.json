{
  "name": "{{name}}",
  "version": "0.0.0-semantic-release",
  "description": "{{description}}",
  "module": "{{module}}",
  "main": "{{main}}",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "bin/{{name}}-systemd"
  ],
  "bin": {
    "{{name}}": "bin/{{name}}",
    "{{name}}-systemd": "bin/{{name}}-systemd"
  },
  "keywords": [
    "kronos-integration"
  ],
  "scripts": {
    "cover": "#overwrite c8 -x 'tests/**/*' --temp-directory build/tmp ava && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "test": "ava",
    "prepare": "rollup -c",
    "docs": "documentation readme {{module}} --section=API",
    "lint": "documentation lint {{module}}"
  },
  "dependencies": {
    "commander": "--delete--",
    "@kronos-integration/service": "^8.3.14",
    "@kronos-integration/service-admin": "^3.0.10",
    "@kronos-integration/service-authenticator": "^1.0.15",
    "@kronos-integration/service-health-check": "^5.0.12",
    "@kronos-integration/service-http": "^10.0.4",
    "@kronos-integration/service-ldap": "^2.1.14"
  },
  "devDependencies": {
    "markdown-doctest": "--delete--",
    "acorn-class-fields": "https://github.com/arlac77/acorn-class-fields.git",
    "npm-pkgbuild": "^6.11.3",
    "documentation": "^12.1.4",
    "ava": "^2.4.0",
    "c8": "^7.0.0",
    "esm": "^3.2.25",
    "rollup": "^1.28.0",
    "rollup-plugin-consts": "^1.0.1",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-executable": "^1.5.2",
    "rollup-plugin-native": "^1.2.0",
    "@rollup/plugin-node-resolve": "^6.1.0",
    "@rollup/plugin-commonjs": "^11.0.1",
    "builtin-modules": "^3.1.0",
    "semantic-release": "^15.14.0"
  },
  "optionalDependencies": {
    "@kronos-integration/service-systemd": "^2.2.11"
  },
  "license": "BSD-2-Clause",
  "engines": {
    "node": ">=13.5.0"
  },
  "os": [
    "linux",
    "darwin"
  ],
  "cpu": [
    "arm",
    "arm64",
    "x64"
  ],
  "config": {
    "socket": "/run/${name}/http/socket"
  },
  "pacman": {
    "arch": [
      "aarch64",
      "armv7h",
      "x86_64"
    ],
    "hooks": "pacman/hooks.sh",
    "backup": "etc/${name}/config.json",
    "depends": {
      "systemd": ">=244.1",
      "nginx-mainline": ">=1.17.7"
    },
    "installdir": "/services/${name}",
    "additional-content": [
      "npm-dist",
      "npm-dependencies"
    ],
    "content": {
      "/usr/lib/tmpfiles.d/${name}.conf": "pacman/tmpfiles.conf",
      "/etc/${name}/config.json": "config/config.json"
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --pkgver ${nextRelease.version} --npm-dist --npm-modules pkgbuild pacman makepkg"
        }
      ]
    ]
  },
  "ava": {
    "require": [
      "esm"
    ],
    "extensions": [
      "mjs"
    ],
    "babel": false,
    "compileEnhancements": false,
    "files": [
      "tests/*-test.mjs"
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/npm-package-template-root",
      "arlac77/npm-package-template-travis",
      "arlac77/npm-package-template-rollup",
      "arlac77/npm-package-template-ava"
    ],
    "files": [
      {
        "merger": "Package",
        "pattern": "**/package.json"
      },
      {
        "merger": "INI",
        "pattern": "**/*.service",
        "options": {
          "messagePrefix": "fix(systemd): ",
          "expand": false
        }
      },
      {
        "merger": "INI",
        "pattern": "**/*.socket",
        "options": {
          "messagePrefix": "fix(systemd): ",
          "expand": false
        }
      },
      {
        "merger": "Readme",
        "pattern": "README.md",
        "options": {
          "badges": [
            {
              "name": "styled with prettier",
              "icon": "https://img.shields.io/badge/styled_with-prettier-ff69b4.svg",
              "url": "https://github.com/prettier/prettier"
            },
            {
              "name": "install size",
              "icon": "https://packagephobia.now.sh/badge?p={{name}}/@{{version}}",
              "url": "https://packagephobia.now.sh/result?p={{name}}@{{version}}"
            },
            {
              "name": "Known Vulnerabilities",
              "icon": "https://snyk.io/test/github/{{github.user}}/{{github.repo}}/badge.svg",
              "url": "https://snyk.io/test/github/{{github.user}}/{{github.repo}}"
            },
            {
              "name": "downloads",
              "icon": "http://img.shields.io/npm/dm/{{name}}.svg?style=flat-square",
              "url": "https://npmjs.org/package/{{name}}"
            }
          ]
        }
      }
    ],
    "usedBy": [
      "Kronos-Integration/kronos-cluster-node",
      "arlac77/component-manager",
      "arlac77/entitlement-provider",
      "arlac77/rtsp-archive",
      "arlac77/system-dashboard"
    ]
  }
}
