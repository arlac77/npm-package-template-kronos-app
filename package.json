{
  "name": "{{name}}",
  "version": "0.0.0-semantic-release",
  "description": "{{description}}",
  "module": "{{module}}",
  "main": "{{main}}",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "bin"
  ],
  "bin": {
    "{{name}}": "bin/{{name}}",
    "{{name}}-systemd": "bin/{{name}}-systemd"
  },
  "keywords": [],
  "scripts": {
    "posttest": "--delete--",
    "cover": "#overwrite c8 -x 'tests/**/*' --temp-directory build/tmp ava && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "test": "ava",
    "prepare": "rollup -c",
    "docs": "documentation readme {{module}} --section=API",
    "lint": "documentation lint {{module}}"
  },
  "dependencies": {
    "@kronos-integration/service": "^8.3.9",
    "@kronos-integration/service-admin": "^3.0.7",
    "@kronos-integration/service-authenticator": "^1.0.10",
    "@kronos-integration/service-health-check": "^5.0.9",
    "@kronos-integration/service-http": "^9.0.14",
    "@kronos-integration/service-ldap": "^2.1.10",
    "commander": "^4.0.1"
  },
  "devDependencies": {
    "@rollup/plugin-json": "--delete--",
    "markdown-doctest": "--delete--",
    "acorn-class-fields": "https://github.com/arlac77/acorn-class-fields.git",
    "npm-pkgbuild": "^6.11.0",
    "documentation": "^12.1.4",
    "ava": "^2.4.0",
    "c8": "^6.0.1",
    "esm": "^3.2.25",
    "rollup": "^1.27.13",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-executable": "^1.5.2",
    "rollup-plugin-native": "^1.1.3",
    "@rollup/plugin-node-resolve": "^6.0.0",
    "builtin-modules": "^3.1.0",
    "semantic-release": "^15.13.31"
  },
  "optionalDependencies": {
    "@kronos-integration/service-systemd": "^2.2.4"
  },
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "engines": {
    "node": ">=13.3.0"
  },
  "pacman": {
    "arch": [
      "aarch64",
      "armv7h",
      "x86_64"
    ],
    "hooks": "pacman/hooks.sh",
    "backup": "etc/${name}/config.json",
    "depends": {
      "systemd": ">=244"
    },
    "installdir": "/services/${name}",
    "additional-content": [
      "npm-dist",
      "npm-dependencies"
    ],
    "content": {
      "/usr/lib/tmpfiles.d/${name}.conf": "pacman/tmpfiles.conf",
      "/etc/${name}/config.json": "config/config.json"
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --pkgver ${nextRelease.version} --npm-dist --npm-modules pkgbuild pacman makepkg"
        }
      ]
    ]
  },
  "ava": {
    "require": [
      "esm"
    ],
    "extensions": [
      "mjs"
    ],
    "babel": false,
    "compileEnhancements": false,
    "files": [
      "tests/*-test.mjs"
    ]
  },
  "template": {
    "inheritFrom": "arlac77/npm-package-template-root",
    "files": [
      {
        "merger": "Package",
        "pattern": "**/package.json"
      },
      {
        "merger": "Travis",
        "pattern": ".travis.yml"
      },
      {
        "merger": "Readme",
        "pattern": "README.md",
        "options": {
          "badges": [
            {
              "name": "styled with prettier",
              "icon": "https://img.shields.io/badge/styled_with-prettier-ff69b4.svg",
              "url": "https://github.com/prettier/prettier"
            },
            {
              "name": "Build Status",
              "icon": "https://secure.travis-ci.org/{{github.user}}/{{github.repo}}.png",
              "url": "http://travis-ci.org/{{github.user}}/{{github.repo}}"
            },
            {
              "name": "install size",
              "icon": "https://packagephobia.now.sh/badge?p={{name}}/@{{version}}",
              "url": "https://packagephobia.now.sh/result?p={{name}}@{{version}}"
            },
            {
              "name": "codecov.io",
              "icon": "http://codecov.io/github/{{github.user}}/{{github.repo}}/coverage.svg?branch=master",
              "url": "http://codecov.io/github/{{github.user}}/{{github.repo}}?branch=master"
            },
            {
              "name": "Coverage Status",
              "icon": "https://coveralls.io/repos/{{github.user}}/{{github.repo}}/badge.svg",
              "url": "https://coveralls.io/r/{{github.user}}/{{github.repo}}"
            },
            {
              "name": "Known Vulnerabilities",
              "icon": "https://snyk.io/test/github/{{github.user}}/{{github.repo}}/badge.svg",
              "url": "https://snyk.io/test/github/{{github.user}}/{{github.repo}}"
            },
            {
              "name": "downloads",
              "icon": "http://img.shields.io/npm/dm/{{github.repo}}.svg?style=flat-square",
              "url": "https://npmjs.org/package/{{github.repo}}"
            }
          ]
        }
      },
      {
        "merger": "Rollup",
        "pattern": "**/rollup.config.js"
      }
    ],
    "usedBy": [
      "Kronos-Integration/kronos-cluster-node",
      "arlac77/entitlement-provider",
      "arlac77/component-manager",
      "arlac77/system-dashboard"
    ]
  }
}
