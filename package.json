{
  "bin": {
    "{{name}}-systemd": "src/{{name}}-systemd-cli.mjs",
    "{{name}}": "src/{{name}}-cli.mjs"
  },
  "keywords": [
    "kronos-integration",
    "systemd"
  ],
  "scripts": {
    "lint": "",
    "docs": ""
  },
  "dependencies": {
    "@kronos-integration/service": "^8.5.8",
    "@kronos-integration/service-admin": "^3.1.5",
    "@kronos-integration/service-authenticator": "^1.0.35",
    "@kronos-integration/service-health-check": "^5.0.33",
    "@kronos-integration/service-http": "^10.1.14",
    "@kronos-integration/service-ldap": "^2.1.33",
    "@kronos-integration/interceptor-decode-json": "^2.1.9"
  },
  "optionalDependencies": {
    "@kronos-integration/service-systemd": "^2.3.5"
  },
  "devDependencies": {
    "rollup": "--delete--"
  },
  "os": [
    "linux",
    "darwin"
  ],
  "cpu": [
    "arm",
    "arm64",
    "x64"
  ],
  "config": {
    "socket": "/run/${name}/http/socket"
  },
  "pacman": {
    "arch": [
      "aarch64",
      "armv7h",
      "x86_64"
    ],
    "group": "services",
    "hooks": "pacman/hooks.sh",
    "backup": "etc/${name}/config.json",
    "installdir": "/services/${name}",
    "additional-content": "--delete--",
    "content-provider": {
      "npm-dist": {},
      "npm-dependencies": {},
      "systemd": {
        "units": {
          "${name}": "systemd/${name}*"
        }
      }
    },
    "content": {
      "/usr/lib/tmpfiles.d/${name}.conf": "pacman/tmpfiles.conf",
      "/usr/lib/sysusers.d/${name}.conf": "pacman/sysusers.conf",
      "/etc/${name}/config.json": "config/config.json"
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --pkgver ${nextRelease.version} --npm-dist --npm-modules pkgbuild pacman makepkg"
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-root",
      "arlac77/template-github-action",
      "arlac77/template-ava",
      "arlac77/template-pacman",
      "arlac77/template-nginx",
      "arlac77/template-systemd",
      "arlac77/template-semantic-release"
    ],
    "usedBy": [
      "Kronos-Integration/cluster-node",
      "arlac77/component-manager",
      "arlac77/entitlement-provider",
      "arlac77/rtsp-archive",
      "arlac77/system-dashboard"
    ],
    "properties": {
      "node_version": "14.2.0"
    }
  }
}
