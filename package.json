{
  "module": "{{module}}",
  "main": "{{main}}",
  "files": [
    "bin/{{name}}-systemd"
  ],
  "bin": {
    "{{name}}": "bin/{{name}}",
    "{{name}}-systemd": "bin/{{name}}-systemd"
  },
  "keywords": [
    "kronos-integration", "systemd"
  ],
  "scripts": {
    "prepare": "rollup -c"
  },
  "dependencies": {
    "commander": "--delete--",
    "@kronos-integration/service": "^8.3.15",
    "@kronos-integration/service-admin": "^3.0.12",
    "@kronos-integration/service-authenticator": "^1.0.16",
    "@kronos-integration/service-health-check": "^5.0.12",
    "@kronos-integration/service-http": "^10.0.5",
    "@kronos-integration/service-ldap": "^2.1.15"
  },
  "devDependencies": {
    "acorn-class-fields": "https://github.com/arlac77/acorn-class-fields.git"
  },
  "optionalDependencies": {
    "@kronos-integration/service-systemd": "^2.2.11"
  },
  "engines": {
    "node": ">=13.7.0"
  },
  "os": [
    "linux",
    "darwin"
  ],
  "cpu": [
    "arm",
    "arm64",
    "x64"
  ],
  "config": {
    "socket": "/run/${name}/http/socket"
  },
  "pacman": {
    "arch": [
      "aarch64",
      "armv7h",
      "x86_64"
    ],
    "hooks": "pacman/hooks.sh",
    "backup": "etc/${name}/config.json",
    "depends": {
      "nginx-mainline": ">=1.17.8",
      "systemd": ">=244.1"
    },
    "installdir": "/services/${name}",
    "additional-content": [
      "npm-dist",
      "npm-dependencies"
    ],
    "content": {
      "/usr/lib/tmpfiles.d/${name}.conf": "pacman/tmpfiles.conf",
      "/etc/${name}/config.json": "config/config.json"
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --pkgver ${nextRelease.version} --npm-dist --npm-modules pkgbuild pacman makepkg"
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/npm-package-template-root",
      "arlac77/npm-package-template-travis",
      "arlac77/npm-package-template-rollup",
      "arlac77/npm-package-template-ava",
      "arlac77/npm-package-template-documentation",
      "arlac77/npm-package-template-pacman",
      "arlac77/npm-package-template-systemd",
      "arlac77/npm-package-template-release"
    ],
    "files": [
      {
        "merger": "Readme",
        "pattern": "README.md",
        "options": {
          "badges": [
            {
              "name": "install size",
              "icon": "https://packagephobia.now.sh/badge?p={{name}}/@{{version}}",
              "url": "https://packagephobia.now.sh/result?p={{name}}@{{version}}"
            },
            {
              "name": "downloads",
              "icon": "http://img.shields.io/npm/dm/{{name}}.svg?style=flat-square",
              "url": "https://npmjs.org/package/{{name}}"
            }
          ]
        }
      }
    ],
    "usedBy": [
      "Kronos-Integration/kronos-cluster-node",
      "arlac77/component-manager",
      "arlac77/entitlement-provider",
      "arlac77/rtsp-archive",
      "arlac77/system-dashboard"
    ]
  }
}
