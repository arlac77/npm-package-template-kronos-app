{
  "files": [
    "bin/{{name}}-systemd"
  ],
  "bin": {
    "{{name}}": "bin/{{name}}",
    "{{name}}-systemd": "bin/{{name}}-systemd"
  },
  "keywords": [
    "kronos-integration",
    "systemd"
  ],
  "scripts": {
    "prepare": "rollup -c"
  },
  "dependencies": {
    "@kronos-integration/service": "^8.3.23",
    "@kronos-integration/service-admin": "^3.0.18",
    "@kronos-integration/service-authenticator": "^1.0.19",
    "@kronos-integration/service-health-check": "^5.0.19",
    "@kronos-integration/service-http": "^10.0.9",
    "@kronos-integration/service-ldap": "^2.1.19"
  },
  "optionalDependencies": {
    "@kronos-integration/service-systemd": "^2.2.13"
  },
  "os": [
    "linux",
    "darwin"
  ],
  "cpu": [
    "arm",
    "arm64",
    "x64"
  ],
  "config": {
    "socket": "/run/${name}/http/socket"
  },
  "pacman": {
    "arch": [
      "aarch64",
      "armv7h",
      "x86_64"
    ],
    "hooks": "pacman/hooks.sh",
    "backup": "etc/${name}/config.json",
    "installdir": "/services/${name}",
    "additional-content": [
      "npm-dist",
      "npm-dependencies"
    ],
    "content": {
      "/usr/lib/tmpfiles.d/${name}.conf": "pacman/tmpfiles.conf",
      "/etc/${name}/config.json": "config/config.json"
    },
    "depends" : {
     "nginx-mainline": ">=1.17.9"
    },
    "dependes" : "--delete--"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --pkgver ${nextRelease.version} --npm-dist --npm-modules pkgbuild pacman makepkg"
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-root",
      "arlac77/template-travis",
      "arlac77/template-rollup",
      "arlac77/template-ava",
      "arlac77/template-documentation",
      "arlac77/template-pacman",
      "arlac77/template-nginx",
      "arlac77/template-systemd",
      "arlac77/template-release"
    ],
    "usedBy": [
      "Kronos-Integration/kronos-cluster-node",
      "arlac77/component-manager",
      "arlac77/entitlement-provider",
      "arlac77/rtsp-archive",
      "arlac77/system-dashboard"
    ],
    "properties": {
      "node_version": "13.13.0"
    }
  }
}
